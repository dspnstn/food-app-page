---
import burgerpic from '../assets/burgerpic.avif';
import { Image } from "astro:assets";
---
<div class="m-5 flex flex-col px-2 pb-20 pt-4 max-w-[180px] h-[230px]
rounded-2xl overflow-hidden border border-gray-300
text-[18px]">
    <a  class="flex justify-center items-center" href="/."> 
        <Image
            loading={"eager"}
            src={burgerpic}
            widths={[128, 256]}
            width={60}
            height={60}
            class="object-contain w-[90%] h-[85%]"
            alt="hamburger photo"
        />
    </a>
    <h1 class="font-bold">Hamburger</h1>
    <h2>Beef Burger</h2>
</div>