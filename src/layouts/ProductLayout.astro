---
import burgerpic from "../assets/burgerpic.avif";
import { Image } from "astro:assets";
const { title, description, rating, url = "/" } = Astro.props;
---

<div
    class="m-2 flex flex-col
px-2 pb-20 pt-4 max-w-[300px] h-[310px]
rounded-2xl overflow-hidden border border-gray-300
text-[18px]
[@media(min-width:375px)_and_(max-width:1023px)]:max-w-[170px]
[@media(min-width:375px)_and_(max-width:1023px)]:h-[210px]"
>
    <a class="flex justify-center items-center" href="/.">
        <Image
            loading={"eager"}
            src={burgerpic}
            widths={[128, 256]}
            width={60}
            height={60}
            class="object-contain w-[90%] h-[85%]"
            alt="hamburger photo"
        />
    </a>
        <h1 class="font-bold">{title}</h1>
        <h2>{description}</h2>
        <div class="flex flex-row justify-between">
            <div class="flex flex-row gap-2">
                <div>⭐ {rating}</div>
            </div>
            <div class="mr-4 text-5xl">♡</div>
        </div>
</div>
