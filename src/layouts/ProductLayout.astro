---
import burgerpic from "../assets/burgerpic.avif";
import { Image } from "astro:assets";
const { title, description, rating, url = "/" } = Astro.props;
---

<div
    class="m-2 flex flex-col
px-2 pb-20 pt-4 max-w-[300px] h-[310px]
rounded-2xl overflow-hidden border border-gray-300
text-[18px]
[@media(min-width:375px)_and_(max-width:1023px)]:max-w-[170px]
[@media(min-width:375px)_and_(max-width:1023px)]:h-[210px]"
>
    <a class="flex justify-center items-center" href={url}>
        <Image
            loading={"eager"}
            src={burgerpic}
            widths={[128, 256]}
            width={60}
            height={60}
            class="object-contain w-[90%] h-[85%]"
            alt="hamburger photo"
        />
    </a>
        <h1 class="font-bold">{title}</h1>
        <h2>{description}</h2>
        <div class="flex flex-row justify-between mt-1">
            <div class="flex-none gap-2">
                <div>
                    <button class="">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="yellow" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M11.48 3.499a.562.562 0 0 1 1.04 0l2.125 5.111a.563.563 0 0 0 .475.345l5.518.442c.499.04.701.663.321.988l-4.204 3.602a.563.563 0 0 0-.182.557l1.285 5.385a.562.562 0 0 1-.84.61l-4.725-2.885a.562.562 0 0 0-.586 0L6.982 20.54a.562.562 0 0 1-.84-.61l1.285-5.386a.562.562 0 0 0-.182-.557l-4.204-3.602a.562.562 0 0 1 .321-.988l5.518-.442a.563.563 0 0 0 .475-.345L11.48 3.5Z" />
                        </svg>                                                   
                    </button>
                    {rating}
                </div>
            </div>
            <div class="mr-4">
                <button class="">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M21 8.25c0-2.485-2.099-4.5-4.688-4.5-1.935 0-3.597 1.126-4.312 2.733-.715-1.607-2.377-2.733-4.313-2.733C5.1 3.75 3 5.765 3 8.25c0 7.22 9 12 9 12s9-4.78 9-12Z" />
                    </svg>                          
                </button>
            </div>
        </div>
</div>
