---
import burgerpic from '../assets/burgerpic.avif';
import { Image } from "astro:assets";
---
<div class="m-5 flex flex-col pr-5 pl-5 pb-20 pt-4 max-w-[220px] max-h-[260px]
rounded-2xl overflow-hidden border border-gray-300
text-xl">
    <a href="/."> 
        <Image
            loading={"eager"}
            src={burgerpic}
            widths={[128, 256]}
            width={60}
            height={60}
            class="object-contain w-full h-full"
            style="transform: scale(0.75); transform-origin: 0.0;"
            alt="hamburger photo"
        />
    </a>
    <h1 class="font-bold">Hamburger</h1>
    <h2>Beef Burger</h2>
</div>