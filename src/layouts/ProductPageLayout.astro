---
const { frontmatter } = Astro.props;
import "../styles/global.css";
---
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width">
    <meta name="generator" content={Astro.generator} />
</head>

<div class="fixed inset-0 bg-gray-50 -z-10"></div>

<div class="text-[1rem] font-sans min-w-[320px] [@media(min-width:425px)_and_(max-width:1439px)]:text-[1.25rem] [@media(min-width:1440px)]:text-[1.5rem]">
    <div class="flex flex-col p-2 space-y-4">
        <div class="flex justify-center p-2 2xl:justify-start">
            <img
            loading={"eager"}
            src={frontmatter.image}
            width={60}
            height={60}
            class="object-contain w-[90%] h-[85%] max-w-[576px]"
            alt={frontmatter.alt || "Product image"}
            />
        </div>

        <h1 class="font-bold">{frontmatter.title}</h1>

        <div class="flex items-center gap-3">
            <svg
                xmlns="http://www.w3.org/2000/svg"
                fill="orange"
                viewBox="0 0 24 24"
                class="size-6"
            >
                <path
                    d="M11.48 3.499a.562.562 0 0 1 1.04 0l2.125 5.111a.563.563 0 0 0 .475.345l5.518.442c.499.04.701.663.321.988l-4.204 3.602a.563.563 0 0 0-.182.557l1.285 5.385a.562.562 0 0 1-.84.61l-4.725-2.885a.562.562 0 0 0-.586 0L6.982 20.54a.562.562 0 0 1-.84-.61l1.285-5.386a.562.562 0 0 0-.182-.557l-4.204-3.602a.562.562 0 0 1 .321-.988l5.518-.442a.563.563 0 0 0 .475-.345L11.48 3.5Z"
                ></path>
            </svg>
            <span class="font-semibold"
                >{frontmatter.rating}</span
            >
        </div>

        <article class="">
            <slot />
        </article>
        <!-- spicy - portion - price button - order now button -->
    </div>
</div>

