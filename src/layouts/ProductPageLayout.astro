---
const { frontmatter } = Astro.props;
import "../styles/global.css";
---
<body class="text-[1.5rem] font-sans min-w-[320px] bg-gray-50
		 flex flex-col m-2 space-y-4">
    <div class="flex items-center justify-center max-w-lg">
        <img
        loading={"eager"}
        src={frontmatter.image}
        width={256}
        height={256}
        class="object-contain w-[90%] h-[85%]"
        alt={frontmatter.alt || "Product image"}
        />
    </div>

    <h1 class="text-2xl font-bold">{frontmatter.title}</h1>

    <div class="flex items-center gap-2">
        <svg
            xmlns="http://www.w3.org/2000/svg"
            fill="orange"
            viewBox="0 0 24 24"
            class="size-6"
        >
            <path
                d="M11.48 3.499a.562.562 0 0 1 1.04 0l2.125 5.111a.563.563 0 0 0 .475.345l5.518.442c.499.04.701.663.321.988l-4.204 3.602a.563.563 0 0 0-.182.557l1.285 5.385a.562.562 0 0 1-.84.61l-4.725-2.885a.562.562 0 0 0-.586 0L6.982 20.54a.562.562 0 0 1-.84-.61l1.285-5.386a.562.562 0 0 0-.182-.557l-4.204-3.602a.562.562 0 0 1 .321-.988l5.518-.442a.563.563 0 0 0 .475-.345L11.48 3.5Z"
            ></path>
        </svg>
        <span class="text-base leading-none font-semibold"
            >{frontmatter.rating}</span
        >
    </div>

    <article class="">
        <slot />
    </article>
    <!-- spicy - portion - price button - order now button -->
</body>

